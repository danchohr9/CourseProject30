<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="446.0" prefWidth="409.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bg.tu_varna.sit.courseproject30.presentation.controllers.LoginController">
