            <Font size="26.0" />
         </font>
      </Label>
      <ImageView fx:id="imageId" fitHeight="170.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true" />
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="294.0" spacing="5.0">
         <children>
            <Label fx:id="usernameLbl" text="Username:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTF" prefHeight="26.0" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="294.0" spacing="5.0">
         <children>
            <Label fx:id="passwordLbl" text="Password:" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <AnchorPane>
               <children>
                  <TextField fx:id="visiblePassword" layoutX="2.0" prefHeight="26.0" prefWidth="170.0" text="" />
                  <PasswordField fx:id="passwordPF" layoutX="2.0" prefHeight="26.0" prefWidth="170.0" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="38.0" prefWidth="294.0" spacing="5.0">
         <children>
            <Button fx:id="signInBt" mnemonicParsing="false" onAction="#signInBtOnAction" styleClass="btn, btn-primary" text="Sign In" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <CheckBox fx:id="showPassChB" mnemonicParsing="false" text="Show Password" />
         </children>
      </HBox>
      <Label fx:id="infoLbl" prefHeight="18.0" prefWidth="207.0" textAlignment="RIGHT" textFill="#d40022" />
   </children>
